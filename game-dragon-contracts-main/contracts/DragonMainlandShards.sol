pragma solidity >=0.8.2 <0.9.0;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

/**
 * Dragon Mainland Shards ERC20 Token
 */
contract DragonMainlandShardsToken is ERC20, ERC20Burnable, Pausable, Ownable {
    constructor(address _recipient) ERC20("Dragon Mainland Shards", "DMS") {
        require(_recipient != address(0), "recipient address is zero");
        _mint(_recipient, 1000000000 * 10**decimals());
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal override whenNotPaused {
        super._beforeTokenTransfer(from, to, amount);
    }
}
